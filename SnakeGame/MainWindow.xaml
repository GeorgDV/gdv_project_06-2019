<Window x:Name="GameWindow" x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="Snake-Game" Height="760" Width="677" MouseDown="Window_MouseDown" KeyDown="Window_KeyDown" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="GameBoard" Background="LimeGreen" Height="660" Width="660" VerticalAlignment="Top">
            <Rectangle
                Name="rectangle1"
                Width="30" Height="30" 
                Stroke="DarkGreen" StrokeThickness="5"
                Canvas.Top="30" Canvas.Left="30"
                Fill="Gold">
            </Rectangle>
        </Canvas>
        <Canvas x:Name="ScoreBoard" Background="LightGreen" Height="60" Width="670" VerticalAlignment="Bottom">
        </Canvas>
    </Grid>
</Window>
